BoxLayout:
    ScreenManager:
        id: screen_manager

        Home:
            name: "home"
        Thematics:
            name: "thematics"
        Details:
            name: "details"

<Home>:
    BoxLayout:
        orientation: "horizontal"

        canvas:
            Rectangle:
                source: "assets/home/background.png"
                pos: self.pos
                size: self.size

        Video:
            source: "assets/home/video.mp4"
            state: "play"
            options: {"eos": "loop"}
            pos_hint: {'center_x': 0.5, 'y': 0.5}
            size: (0.5, 0.5)

        Image:
            source: "assets/home/title.png"

        ImageButton:
            source: "assets/home/play.png"
            on_press:
                root.manager.current="thematics"

<Thematics>:
    BoxLayout:
        orientation: "vertical"

        canvas:
            Rectangle:
                source: "assets/hub_thematics/background.png"
                pos: self.pos
                size: self.size

        Image:
            source: "assets/hub_thematics/title.png"
            pos_hint: {"center_x": 0.5, "y": .6}
            size_hint: (.8, .3)

        RecycleView:
            data: root.rv_data
            viewclass: "Image_nav"
            RecycleGridLayout:
                cols: 5
                default_size: None, dp(100) #taille de mes images.
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                spacing: 20, 20 # Le dessous des images

<Details>
    BoxLayout:
        orientation: "vertical"

        canvas:
            Rectangle:
                source: app.bg
                pos: self.pos
                size: self.size

        Image:
            source: app.pTitle
            pos_hint: {"center_x": .5, "y": .6}
            size_hint: None, None
            size: self.texture_size

        FloatLayout:
            Pickmeup:
                pos_hint: {"x": 0, "y":.3}
            Pickmeup:
                pos_hint: {"x": .2, "y": .3}
            Pickmeup:
                pos_hint: {"x": .4, "y": .3}
            Pickmeup:
                pos_hint: {"x": .6, "y": .3}
            Pickmeup:
                pos_hint: {"x": .8, "y": .3}

        FloatLayout:
            ImageButton: # On est obligé de donner une size à une image avant de la déplacer.
            # Sinon elle prend toute la place du FloatLayout.
                source: "assets/thematics/return.png"
                pos_hint: {"center_x": .8, "y": 0}
                size_hint: None, None
                size: self.texture_size
                on_press:
                    root.manager.current="thematics"





<ImageButton@ButtonBehavior+Image>:

<Image_nav@ButtonBehavior+Image>:
    on_press:
        app.navPage(self.elt)

<Pickmeup@Image>:
    source: "assets/thematics/pickmeup.png"
    size_hint: None, None
    size: self.texture_size




