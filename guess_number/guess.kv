<GameView>:
    result_label: result_label
    answer_input: answer_input
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "assets/home/background.png"
            allow_stretch: True
            keep_ratio: True
            size_hint: None, None
            width: self.parent.width
            height: self.parent.width/self.image_ratio

        BoxLayout:
            orientation: "vertical"
            padding: 100, 30, 100, 30 # 100 sur les côté et 30 en haut et en bas.
        Label:
            id: result_label
            text: "Found the number"
            font_size: 60
        TextInput:
            id: answer_input
            padding: 20, 20, 20, 20
            size_hint: 1, 0.5
            font_size: 20
            answer_input: "number"
            multiline: False
        Button:
            text: "Validate"
            size_hint: 1, 0.5
            bold: True
            background_color: "#0065EF"
            on_press: root.check_number()

