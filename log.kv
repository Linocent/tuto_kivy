
<LoginScreen>:
    info: info
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Hello"
            font_size: "45"
        Label:
            id: info
            text: "Log toi:"
            font_size: "20"
            halign: "center"
            bold: True
            underline: True
        LoginBox:
            on_login_success: root.change()
            on_error:
                info.text = "Wrong username or password, try again:"

<LoginBox>:
    BoxLayout:
        orientation: "vertical"

        Fields:
            id: username
            name: "Username"

        Fields:
            id: password
            name: "Password"

        Button:
            text: "Submit"
            font_size: "32"
            on_press:
                root.get_data()

<Fields@BoxLayout>:
    name: ''
    BoxLayout:
        orientation: "horizontal"

        Label:
            text: root.name
            font_size: "18"
            halign: "left"

        TextInput:
            id: root.name
            multiline: False
            font_size: "18"

<Home>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"

            Label:
                text: "Hello "+app.username
                font_size: "20"
                bold: True
                underline: True

            Button:
                text: "Log out"
                on_press:
                    root.manager.current="log"
